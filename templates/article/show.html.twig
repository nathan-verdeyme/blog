{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ article.image }}" width="100" height="100"></td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>DateDePublication</th>
                <td>{{ article.dateDePublication ? article.dateDePublication|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DerniereMiseAJour</th>
                <td>{{ article.derniereMiseAJour ? article.derniereMiseAJour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Publie</th>
                <td>{{ article.publie ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ article.categorie }}</td>
            </tr>
            <tr>
                <th>Tags</th>
{#<td>{{ article.tags }}</td>#}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">back to list</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
