{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-uppercase mb-0">User index</h5>
                </div>
                <div class="table-responsive">
                    <div class="table no-wrap user-table mb-0">
                        <table class="table no-wrap user-table mb-0">
                            <thead>
                            <tr>
                                <th scope="col" class="border-0 text-uppercase font-medium pl-4">Id</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Email</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Roles</th>
                                <th scope="col" class="border-0 text-uppercase font-medium">Password</th>
                                <th>IsVerified</th>
                                <th>actions</th>
                            </tr>

                            </thead>
                            <tbody>



                            {% for user in users %}
                                <tr>
                                    <td class="pl-4">{{ user.id }}</td>
                                    <td class="font-medium mb-0">{{ user.email }}</td>
                                    <td class="text-muted">{{ user.roles ? user.roles|json_encode : '' }}</td>
                                    <td class="text-muted">{{ user.password }}</td>
                                    <td class="text-muted">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                                    <td>
                                        <button type="button" class="btn btn-outline-info btn-circle btn-lg btn-circle"><a href="{{ path('user_show', {'id': user.id}) }}">show</a></button>
                                        <button type="button" class="btn btn-outline-info btn-circle btn-lg btn-circle"><a href="{{ path('user_edit', {'id': user.id}) }}">edit</a></button>
                                    </td>

                                </tr>

                            {% else %}
                                <tr>
                                    <td colspan="6">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                    <a href="{{ path('user_new') }}">Create new</a>

                    {% endblock %}

